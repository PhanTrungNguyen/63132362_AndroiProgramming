<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/nguyen1"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/nguyen2"
        app:layout_constraintTop_toBottomOf="@+id/nguyen5" />

    <TextView
        android:id="@+id/nguyen2"
        android:layout_width="10dp"
        android:layout_height="33dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:text="b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nguyen3" />

    <TextView
        android:id="@+id/nguyen3"
        android:layout_width="6dp"
        android:layout_height="37dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính Tổng "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nguyen1"
        android:onClick="handleCong"/>

    <TextView
        android:id="@+id/nguyen4"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:text="Kết quả"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/nguyen5"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/nguyen3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nguyen6"
        android:layout_width="146dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/nguyen4"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>